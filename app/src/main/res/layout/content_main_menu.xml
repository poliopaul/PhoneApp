<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.main.MainView"
    tools:showIn="@layout/activity_main_menu"
    android:background="@mipmap/bg"
    android:gravity="center_horizontal">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Main Menu"
                android:id="@+id/textView"
                android:layout_column="0"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textAlignment="center"
                android:layout_span="3" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="35dp"
                android:id="@+id/imageoverview"
                android:clickable="true"
                android:src="@drawable/overview"
                android:layout_column="0" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/imagethemes"
                android:clickable="true"
                android:src="@drawable/themes"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Overview"
                android:layout_column="0"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_column="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Themes"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="31dp"
                android:id="@+id/imagelivingroom"
                android:src="@drawable/livingroom"
                android:layout_column="0" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/imagehobbyroom"
                android:src="@drawable/hobbyroom"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Living room"
                android:layout_column="0"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_column="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hobby room"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:id="@+id/textView5"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="35dp"
                android:id="@+id/imagekitchen"
                android:clickable="true"
                android:src="@drawable/kitchen"
                android:layout_column="0" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/imagebedroom"
                android:src="@drawable/bedroom"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Kitchen"
                android:layout_column="0"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_column="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bedroom"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="35dp"
                android:id="@+id/imagelighting"
                android:src="@drawable/lightbulb"
                android:layout_column="0" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/imagemusic"
                android:src="@drawable/music"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Lighting"
                android:layout_column="0"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:id="@+id/textView8"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_column="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Music"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:id="@+id/textView9"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>

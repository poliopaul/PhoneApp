<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.livingroom.LivingroomView"
    tools:showIn="@layout/activity_livingroom_menu"
    android:background="@mipmap/bg"
    android:gravity="center"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_marginTop="40dp">
            <TextView
                android:layout_weight="1.0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Living Room"
                android:id="@+id/textView2"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textAlignment="center"
                android:layout_span="3"/>
        </TableRow>


        <TableRow
            android:layout_marginTop="15dp">
            <TextView
                android:layout_weight="1.0"
                android:textAlignment="center"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mode: N/A"
                android:id="@+id/modeText"
                android:layout_span="3" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp">
            <TextView
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Temp: N/A"
                android:id="@+id/temperatureText"
                android:layout_span="1" />
            <TextView
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Brightness: N/A"
                android:id="@+id/brightnessText"
                android:layout_span="1" />
        </TableRow>

        <TableRow
            android:layout_marginTop="50dp">
            <TextView
                android:layout_weight="1.0"
                android:textAlignment="center"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Not Available"
                android:id="@+id/textintensity"
                android:layout_span="3" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp">
            <SeekBar
                android:thumb="@drawable/thumbler"
                android:layout_weight="1"
                android:minHeight="30dp"
                android:maxHeight="30dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="14dp"
                android:thumbOffset="-2dp"
                android:progressDrawable="@drawable/progbar_intensity"
                android:id="@+id/seekbarIntensity"
                android:layout_span="3" />
        </TableRow>

        <TableRow
            android:layout_marginTop="15dp">
            <TextView
                android:layout_weight="1.0"
                android:textAlignment="center"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Not Available"
                android:id="@+id/textcolor"
                android:layout_span="3" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp">
            <SeekBar
                android:layout_weight="1.0"
                android:minHeight="30dp"
                android:maxHeight="30dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="14dp"
                android:thumb="@drawable/thumbler"
                android:thumbOffset="-2dp"
                android:progressDrawable="@drawable/progbar_color"
                android:id="@+id/seekbarColor"
                android:layout_span="3"
                android:min="2700"
                android:max="6500"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">
        </LinearLayout>
        <TableRow>
            <ImageView
                android:layout_height="35dp"
                android:clickable="true"
                android:id="@+id/imageBack"
                android:src="@drawable/back"
                android:textAlignment="center"
                android:layout_span="3"
                android:layout_column="0"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="10dp">
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Back"
                android:clickable="true"
                android:textAlignment="center"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:id="@+id/backText"
                android:layout_span="3"
                android:layout_column="0"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>
</LinearLayout>
